FROM golang:1.20 as build

VOLUME /air/.cache

RUN useradd --home-dir /air air

USER air

WORKDIR /air/code

RUN echo "go run cmd/dndmachine/main.go storage upgrade && air" \
    > /air/entrypoint.sh \
    && chmod +x /air/entrypoint.sh

RUN go install github.com/cosmtrek/air@latest

ENV CGO_ENABLED=0
ENV GO111MODULE=on
ENV GOFLAGS=-mod=vendor

EXPOSE 8080
EXPOSE 4000

COPY . .

ENTRYPOINT [ "/bin/sh" ]

CMD [ "/air/entrypoint.sh" ]
